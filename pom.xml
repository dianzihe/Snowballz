<?xml version="1.0" encoding="UTF-8"?>

<project>
  <modelVersion>4.0.0</modelVersion>
  <name>Minecraft - SnowBallz</name>
  <groupId>com.nohupgaming.minecraft</groupId>
  <artifactId>Snowballz</artifactId>
  <version>1.6</version>
  <packaging>jar</packaging>  

  <repositories>
    <repository>
      <id>nohups</id>
      <url>http://nohupgaming.com/m2repo</url>
    </repository>
  </repositories>

  <dependencies>
    <dependency>
      <groupId>org.bukkit</groupId>
      <artifactId>bukkit</artifactId>
      <version>0.0.1-495</version>
      <scope>compile</scope>      
    </dependency>
    <dependency>
      <groupId>com.nijiko</groupId>
      <artifactId>permissions</artifactId>
      <version>2.0</version>
      <scope>compile</scope>      
    </dependency>
  </dependencies>
    
  <build>
    <directory>target</directory>
    <outputDirectory>target/classes</outputDirectory>
    <finalName>${artifactId}</finalName>
    <sourceDirectory>src/main/java</sourceDirectory>
    <plugins>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>        
        <inherited>true</inherited>
        <configuration>
          <source>1.5</source>
          <target>1.5</target>
          <optimize>true</optimize>
          <debug>true</debug>
        </configuration>
      </plugin>
    </plugins>    
  </build>    
</project>